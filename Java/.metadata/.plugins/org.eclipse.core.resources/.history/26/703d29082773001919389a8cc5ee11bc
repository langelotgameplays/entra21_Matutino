package exercicios01;

import java.util.Random;

import javax.swing.JOptionPane;

public class Principal {

	public static void main(String[] args) {

		Random aleatorio = new Random();

		int n1 = aleatorio.nextInt(100);
		int n2 = aleatorio.nextInt(100);
		int n3 = aleatorio.nextInt(10);

		Object[] cdg = { n1 + n2, n1 + n2 + n3, n1 + n2 - n3, n1 + (n2 * n3) };

		JOptionPane.showOptionDialog(null, "Qual o resultado da operação " + n1 + " + " + n2, "Prova",
				JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.PLAIN_MESSAGE, null, cdg, cdg[0]);
		
		JOptionPane.showOptionDialog(null, "Qual o resultado da operação " + n1 + " + " + n2, "Prova",
				JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.PLAIN_MESSAGE, null, cdg, cdg[0]);

		System.out.println(n1);
		System.out.println(n2);
		System.out.println(n1 + n2);
	}

}
